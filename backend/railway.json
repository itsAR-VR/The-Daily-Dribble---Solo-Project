{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "DOCKERFILE",
        "dockerfilePath": "backend/Dockerfile.railway"
    },
    "deploy": {
        "numReplicas": 1,
        "restartPolicyType": "ON_FAILURE",
        "restartPolicyMaxRetries": 3,
        "healthcheckPath": "/",
        "healthcheckTimeout": 30
    },
    "envVars": {
        "PYTHONUNBUFFERED": "1",
        "PORT": "8000"
    }
}